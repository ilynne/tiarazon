<div class="plutus_container">
<h1>Listing Accounts</h1>

<table>
  <tr>
    <th class="nobg">ID</th>
    <th>Name</th>
    <th>Type</th>
  </tr>

<% @accounts.each do |account| %>
  <tr class="<%= cycle("even", "odd") -%>">
    <td><%=link_to(account.id, account_path(account.id)) %></td>
    <td><%=h account.name %></td>
    <td><%=h account.type.sub('Plutus::','') %></td>
  </tr>
<% end %>
</table>

<br />

</div>
