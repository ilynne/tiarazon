%p#notice= notice

%p
  %b Name:
  = @product.name
%p
  %b Description:
  = @product.description
%p
  %b Picture:
  = image_tag @product.photo.url(:medium)
%p
  %b Price:
  = @product.price

- if current_user && current_user.admin?
  = link_to 'Edit', edit_product_path(@product)
  = link_to 'Back', products_path
- else
  = link_to 'Add to Cart', "#"
