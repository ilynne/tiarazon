= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    - if current_user
      = f.text_field :email, :value => current_user.email
    - else
      = f.text_field :email
  .actions
    = f.submit 'Confirm'
